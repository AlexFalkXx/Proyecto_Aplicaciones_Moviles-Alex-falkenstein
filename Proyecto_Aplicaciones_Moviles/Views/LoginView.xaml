<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Aplicaciones_Moviles.Views.LoginView"
             BackgroundColor="#002E6D"
             NavigationPage.HasNavigationBar="False">
    
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="images.jpg" WidthRequest="100" HeightRequest="100"/>
        <Entry x:Name="UsernameEntry" Placeholder="Nombre" 
               TextColor="White" 
               PlaceholderColor="LightGray" 
               Margin="0,20,0,0"
               BackgroundColor="#002E6D" />
        <Entry x:Name="PasswordEntry" Placeholder="ContraseÃ±a" 
               IsPassword="True" 
               TextColor="White" 
               PlaceholderColor="LightGray" 
               Margin="0,20,0,0"
               BackgroundColor="#002E6D" />
        <Button Text="Acceso" 
                BackgroundColor="#D8BFD8" 
                TextColor="Black" 
                Clicked="OnLoginButtonClicked" 
                Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
